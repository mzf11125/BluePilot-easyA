{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "packages/*/dist",
    "packages/*/build",
    "packages/mobile/node_modules",
    "packages/*/artifacts",
    "packages/*/cache",
    "packages/*/typechain-types"
  ],
  "extends": "expo/tsconfig.base"
}
