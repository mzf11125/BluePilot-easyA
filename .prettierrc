{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 100,
  "tabWidth": 2,
  "arrowParens": "always",
  "endOfLine": "lf",
  "plugins": ["prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 80,
        "tabWidth": 4,
        "singleQuote": false,
        "bracketSpacing": false
      }
    },
    {
      "files": ["*.tsx", "*.jsx"],
      "options": {
        "printWidth": 120
      }
    }
  ]
}
